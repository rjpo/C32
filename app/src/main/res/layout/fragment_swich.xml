<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="engine.simulador.CAT.C32.Swich">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWITCHES"
        android:textStyle="bold"
        android:textColor="#ffc400"
        android:textSize="20dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline32"
        app:layout_constraintVertical_bias="0.518" />

    <Switch
        android:id="@+id/oilFilter"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="OIL FILTER"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/guideline35"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline34"
        />

    <Switch
        android:id="@+id/coolantLevel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="COOLANT LEVEL"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/guideline36"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline35"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline34"
        />

    <Switch
        android:id="@+id/fuelWSlevell"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="FUEL WATER SEPARATOR LEVEL"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/guideline38"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline36"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline34"/>

    <Switch
        android:id="@+id/fuelPPSwitch"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="FUEL PRIMMING PUMP SWITCH"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline34"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.511"
        app:layout_constraintLeft_toLeftOf="@+id/guideline38"/>

    <Switch
        android:id="@+id/throtBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="THROTTEL BACKUP"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/guideline35"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline34"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <Switch
        android:id="@+id/estop"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="E-STOP USER SHUTDOWN"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/guideline36"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline35"
        app:layout_constraintTop_toTopOf="@+id/guideline34"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        android:layout_marginBottom="8dp"/>

    <Switch
        android:id="@+id/shutdownSwitch"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="SHUTDOWN SWITCH"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/guideline38"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline36"
        app:layout_constraintTop_toTopOf="@+id/guideline34"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline32"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline34"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline35"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline36"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline38"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />


</android.support.constraint.ConstraintLayout>
